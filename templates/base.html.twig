<!DOCTYPE html>
<html lang="fr">
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}V-Elec
			{% endblock %}
		</title>
		<!-- SCROLL REVEAL + SWIPPER + REMIXICON -->
		<link type="image/png" sizes="32x32" rel="icon" href="{{ asset('assets/images/Logo_Kris_white.png') }}">
		<script src="https://unpkg.com/scrollreveal"></script>
		<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
		<link href="https://cdn.jsdelivr.net/npm/remixicon/fonts/remixicon.css" rel="stylesheet">
		<script src="https://kit.fontawesome.com/26aa6b1341.js" crossorigin="anonymous"></script>
		<link rel="stylesheet" href="{{ asset('assets/style/style.css') }}"> {% block stylesheets %}{% endblock %}
		<!-- SEO Meta description -->
		<meta
		name="description" content="Author: EpsiCorp, Creation: 2024,Entreprise: V-Elec, Services d'électricité,rénovation compteur, remise aux normes.">
		<!-- fin SEO Meta description -->
		{% block javascripts %}
			{% block importmap %}
				{{ importmap('app') }}
			{% endblock %}
		{% endblock %}
	</head>
	{% block header %}
		<header class="header">
			<nav class="navbar container">
				<a href="/" class="navbar__logo">
					<img src="" alt="" class="navbar__logo-image">
				</a>
				<div class="navbar__menu">
					<ul class="navbar__list">
						<li class="navbar__list-item">
							<a href="/" class="navbar__list-link">Accueil</a>
						</li>
						<li class="navbar__list-item">
							<a href="/contact" class="navbar__list-link">Nous contacter</a>
						</li>
					</ul>
				</div>
				<div class="navbar__btn-menu">
					<a href="/devis" class="btn btn--text btn--transparent">Devis gratuit</a>
					<button type="button" class="btn btn--action" id="menu-toggler">
						<svg width="19" height="14" viewbox="0 0 19 14" fill="none" xmlns="http://www.w3.org/2000/svg">
							<path d="M10.3333 0.999999L0.999918 1" stroke="#fff" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
							<path d="M17.3333 6.83333L0.999916 6.83333" stroke="#fff" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
							<path d="M10.3333 12.6667L0.999918 12.6667" stroke="#fff" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
						</svg>
					</button>
				</div>
			</nav>
		</header>
	{% endblock %}

	<body>
		{% block body %}{% endblock %}
	</body>
	{% block footer %}
		<footer class="footer">
			<div class="footer__container container">
				<div class="footer__group">
					<p class="footer__description"></p>
					<span class="footer__separator"></span>
					<ul class="footer__list">
						<li class="footer__list-link">
							<a href="/politique" class="footer__list-link">Politique de confidentialité</a>
						</li>
						<li class="footer__list-link">
							<a href="/mention" class="footer__list-link">Mentions légales</a>
						</li>
						<li class="footer__list-link">
							<a href="/conditionVente" class="footer__list-link">Conditions générales de vente</a>
						</li>
					</ul>
					<span class="footer__separator"></span>
					<span class="footer__copyright">Epsicorp 2024 &copy; Tous droits réservés</span>
				</div>
			</div>
		</footer>
	{% endblock %}
</html>
